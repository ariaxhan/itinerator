---
interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<li class="activity-card">
  <h3>{title}</h3>
  <p>{description}</p>
  <a href={href} class="button">Go</a>
</li>

<style>
  .activity-card {
    background: rgba(255, 255, 255, 0.9);
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .activity-card h3 {
    margin-top: 0;
    font-size: 1.5rem;
    color: #333;
  }

  .activity-card p {
    color: #666;
  }

  .activity-card a {
    color: #007bff;
    text-decoration: none;
  }

  .activity-card a:hover {
    text-decoration: underline;
  }
</style>