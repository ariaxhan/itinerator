---
import ActivityCard from '../components/ActivityCard.astro';

interface Activity {
  title: string;
  description: string;
  href: string;
}

const activities: Activity[] = [
  { title: 'Take the Quiz', description: 'Find out what you should do today by answering a few questions.', href: '/quiz' },
  { title: 'Surprise Me', description: 'Let us surprise you with an exciting activity!', href: '/surprise' }
];
---

<html lang="en">
  <head>
    <title>The Itinerator</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1>The Itinerator</h1>
      </header>
      <main>
        <h2>What should I do today?</h2>
        <ul class="activities">
          {activities.map(activity => (
            <ActivityCard {...activity} />
          ))}
        </ul>
      </main>
    </div>
  </body>
</html>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    text-align: center;
  }

  header {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #333;
  }

  main {
    margin-top: 2rem;
  }

  .activities {
    padding: 0;
  }

  .button {
    display: inline-block;
    margin: 1rem;
    padding: 1rem 2rem;
    font-size: 1rem;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .button:hover {
    background-color: #0056b3;
  }
</style>